}

void init_game(int argv, char** argc) {
    check_basic_args(argv, argc);
    Deck deck = load_deck_file(argc[1]);
    init_players(argv, argc, &deck);

}

int main(int argv, char** argc) {

    init_game(argv, argc);
    
    return 0;
}
